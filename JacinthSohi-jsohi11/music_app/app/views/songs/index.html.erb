<div class="col-md-12">
	<p> <%=link_to "Add Song", new_song_path, class: 'btn btn-lg btn-default' %> </p>
<table class="table table-striped table-hover">
  <tr>
    <th>Title</th>
    <th>Year Released</th>
    <th>Artist</th>
    <th>Actions</th>
  </tr>
 
  <% @songs.each do |song| %>
    <tr>
      <td class="col-md-1"><%= song.title %></td>
      <td class="col-md-1"><%= song.year_released %></td>
      <td class="col-md-4">
      	    <% song.artists.each do |artist| %>
      		<ul><%=artist.lname %></ul>
      	<%end %>

      </td>
      <td class="col-md-2">
      	<%=link_to "Learn More", artist_path(artist), class: 'btn btn-xs btn-danger' %>
      	<%=link_to "Edit", edit_artist_path(artist), class: 'btn btn-xs btn-default' %>
      	<%=link_to "Delete", artist, method: :delete, data: {confirm: "Do you really want to remove this artist?"}, class: 'btn btn-xs btn-default' %>
      </td>
    </tr>
  <% end %>
</table>
</div>
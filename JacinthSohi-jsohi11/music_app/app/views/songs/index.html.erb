<div style="font-family: 'Open Sans', sans-serif;">
<div class="col-md-12">
<table class="table table-striped table-hover">
  <tr>
    <th>Title</th>
    <th>Year Released</th>
    <th>Actions</th>
  </tr>
 
  <% @songs.each do |song| %>
    <tr>
      <td class="col-md-1"><%= song.title %></td>
      <td class="col-md-1"><%= song.year_released %></td>
      <td class="col-md-2">
      	<%=link_to "Learn More", song_path(song), class: 'btn btn-xs btn-danger' %>
      	<%=link_to "Edit", edit_song_path(song), class: 'btn btn-xs btn-default' %>
      	<%=link_to "Delete", [song.artist, song], method: :delete, data: {confirm: "Do you really want to remove this song?"}, class: 'btn btn-xs btn-default' %>
      </td>
    </tr>
  <% end %>
</table>
</div>
</div>
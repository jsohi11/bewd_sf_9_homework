<div style="font-family: 'Open Sans', sans-serif;">
<h2><%= @artist.fname %> <%= @artist.lname %></h2>
<br />
<div class="row">
  <div class="col-md-2">
  	<%= image_tag(@artist.artist_image, :class => 'img-thumbnail img-square img-responsive') unless @artist.artist_image.nil? %>
  </div>
  <div class="col-md-8">
  	<p><strong>Bio:</strong><br /> 
  		<%= @artist.bio %>
  	</p>
  </div>
</div>
<br />
<h3>Songs</h3>
<table class="table table-striped table-hover">
  <tr>
    <th>Title</th>
    <th>Year Released</th>
  </tr>
<% @artist.songs.each do |song| %>
    <tr>
      <td><%= song.title %></td>
      <td><%= song.year_released %></td>
    </tr>
  <% end %>
</table>
<p> <%=link_to "Add a song", new_song_path(@artist), class: 'btn btn-md btn-default' %> </p>
</div>
<div style="font-family: 'Open Sans', sans-serif;">
<p> <%=link_to "Add an artist", new_artist_path, class: 'btn btn-md btn-default' %> </p>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">All artists</h3>
  </div>
  <div class="panel-body">
<div class="col-md-12">
<table class="table table-striped table-hover">
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Bio</th>
    <th>Actions</th>
  </tr>
 
  <% @artists.each do |artist| %>
    <tr>
      <td class="col-md-1"><%= artist.fname %></td>
      <td class="col-md-1"><%= artist.lname %></td>
      <td class="col-md-4"><%= artist.bio %></td>
      <td class="col-md-2">
      	<%=link_to "Learn More", artist_path(artist), class: 'btn btn-xs btn-danger' %>
      	<%=link_to "Edit", edit_artist_path(artist), class: 'btn btn-xs btn-default' %>
      	<%=link_to "Delete", artist, method: :delete, data: {confirm: "Do you really want to remove this artist?"}, class: 'btn btn-xs btn-default' %>
      </td>
    </tr>
  <% end %>
</table>
</div>
</div>
</div>
</div>